<Window x:Class="Kortspill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kortspill"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="Tile"/>
        </Grid.Background>
        <Button x:Name="button" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name="sortButton" Content="Sort" Width="75" Click="sortButton_Click"/>
        </Button>
        <Button x:Name="pullCardButton" Content="Pull Card" HorizontalAlignment="Left" Margin="220,277,0,0" VerticalAlignment="Top" Width="75" Click="pullCardButton_Click"/>
        <Button x:Name="shuffleStackButton" Content="Shuffle" HorizontalAlignment="Left" Margin="432,277,0,0" VerticalAlignment="Top" Width="75" Click="shuffleStackButton_Click"/>

    </Grid>
</Window>
